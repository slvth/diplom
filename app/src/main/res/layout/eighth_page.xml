<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/your_goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Выносливость"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/slider1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Я могу пройти 5 лестничных пролетов" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider1"
        android:layout_margin="15dp"
        android:valueFrom="0"
        android:valueTo="4"
        android:value="2"
        android:layout_centerVertical="true"
        android:backgroundTint="@color/my1"
        android:foregroundTint="@color/my1"
        app:thumbColor="@color/my1"
        app:haloColor="@color/my1"
        app:tickColor="@color/my1"
        app:trackColor="#CACACA"
        app:trackColorActive="@color/my1"
        app:tickColorActive="@color/my1"
        android:stepSize="1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <TextView
        android:text="Новичок"
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/slider1"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Продвинутый"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_below="@id/slider1"
        android:layout_height="wrap_content"/>

</RelativeLayout>