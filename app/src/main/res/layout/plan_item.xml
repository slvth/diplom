<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:layout_height="300dp">

    <RelativeLayout
        android:id="@+id/rl_top_smuzi"
        android:background="@drawable/item_back_recipe"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_top_meal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageView2" />

        <RelativeLayout
            android:id="@+id/text_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img_top_meal"
            android:paddingLeft="15dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_alignLeft="@id/name"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/kal" />

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/change"
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_top_smuzi"
        android:layout_height="match_parent">

        <TextView
            android:gravity="center"
            android:text="Пропустить"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="1dp"
            android:background="@color/divider"
            android:layout_height="match_parent"/>
        <TextView
            android:gravity="center"
            android:text="Выполнить"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</RelativeLayout>