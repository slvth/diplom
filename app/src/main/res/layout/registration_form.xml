<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:background="@color/white"
    android:paddingTop="50dp"
    android:paddingBottom="20dp">

    <TextView
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:text="Повторите попытку"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/text_sign"
        android:gravity="center"
        android:layout_margin="10dp"
        android:text="Возможно, адрес эл. почты указан неверно или такой адрес уже зарегистрирован"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/second"
        android:layout_margin="10dp"
        android:background="@drawable/mail_style"
        android:clickable="true">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="ПОВТОРИТЬ ПОПЫТКУ"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>